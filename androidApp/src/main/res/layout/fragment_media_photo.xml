<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="Загрузить фотографии"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name_and_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:text="Имя Фамилия"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_photo1"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo2"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo3"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo4"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo5"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo6"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo7"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo8"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo9"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_photo10"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/unknown_person"
            android:visibility="invisible" />
    </LinearLayout>
</ScrollView>